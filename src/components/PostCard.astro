---
interface Props {
  href: string;
  title: string;
  description: string;
  date: Date;
  tags?: string[];
}

const { href, title, description, date, tags = [] } = Astro.props as Props;
---

<li class="group">
  <a href={href} class="block p-6 bg-zinc-800 border border-zinc-700 rounded-lg hover:bg-zinc-750 transition-colors duration-200">
    <h2 class="text-xl font-semibold group-hover:underline text-white">{title}</h2>
    <p class="text-sm text-zinc-400 mt-1">{date.toDateString()}</p>
    <p class="mt-2 text-zinc-300 leading-relaxed">{description}</p>
    {tags.length > 0 && (
      <div class="mt-3 flex flex-wrap gap-2 text-xs">
        {tags.map((tag) => (
          <span class="rounded bg-zinc-700 px-2 py-1 text-zinc-300 hover:bg-zinc-600 transition-colors">
            {tag}
          </span>
        ))}
      </div>
    )}
  </a>
</li>